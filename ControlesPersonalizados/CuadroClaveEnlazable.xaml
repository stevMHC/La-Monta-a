<UserControl x:Class="La_Montaña.ControlesPersonalizados.CuadroClaveEnlazable"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:La_Montaña.ControlesPersonalizados"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="800">
    
    <PasswordBox x:Name="txtClave"      
                            FontSize="13"
                            FontWeight="Medium"
                            FontFamily="Montserrat"                            
                            Foreground="GhostWhite"
                            CaretBrush="#80DE99"
                            BorderBrush="#45DFB1"
                            BorderThickness="0,0,0,2"
                            VerticalContentAlignment="Center"
                            Padding="20,0,0,0">

        <PasswordBox.Background>
            <ImageBrush ImageSource="/La Montaña;component/Imagenes/key-icon.png"
                                       Stretch="None"
                                       AlignmentX="Left"/>
        </PasswordBox.Background>
    </PasswordBox>
</UserControl>
