<Window x:Class="La_Montaña.Vista.DatePickerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:La_Montaña.Vista"
        mc:Ignorable="d"
        Title="DatePickerWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBlock Text="Seleccione la fecha:" Margin="10"/>
            <DatePicker x:Name="datePicker" Margin="10"/>
            <TextBlock Text="Seleccione el tipo de reporte:" Margin="10"/>
            <ComboBox x:Name="reportTypeComboBox" Margin="10">
                <ComboBoxItem Content="Diario" Tag="Daily"/>
                <ComboBoxItem Content="Semanal" Tag="Weekly"/>
                <ComboBoxItem Content="Mensual" Tag="Monthly"/>
            </ComboBox>
            <Button Content="Aceptar" HorizontalAlignment="Right" Margin="10" Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Window>
